<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:padding="15sp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/people_profilepic"
        android:background="@drawable/circle_shape"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@color/blue1"
        app:strokeWidth="2dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/people_profilepic"
        android:text="User"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/people_profilepic"
        android:text="Unverified"
        android:textColor="@color/textprompt"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addAccountBtn"
        style="@style/addAccountBtn"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/blue1"
        android:gravity="center_horizontal"
        android:paddingStart="3dp"
        android:paddingEnd="3dp" />

</RelativeLayout>